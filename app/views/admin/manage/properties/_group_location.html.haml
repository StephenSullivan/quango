.container
  .description{:style=>"height:32px"}
    .heading
      = "Company Details"
  .clear
  .note
    = "These settings affect your mofaq homepage"


  -# Just do Australia for now - internationalize later

  .mobile-form
    .group
      .note
        = "Address line 1"
      = f.text_field :group_address_i, :class=> "text_field_mobile", :style => "width: 100%"

    .group
      .note
        = "Address line 2"
      = f.text_field :group_address_ii, :class=> "text_field_mobile", :style => "width: 100%"

    .group
      .note
        = "Town"
      = f.text_field :group_city, :class=> "text_field_mobile", :style => "width: 100%"

    .group
      .note
        = "State"
      = f.text_field :group_state, :class=> "text_field_mobile", :style => "width: 100%"

    .group.center
