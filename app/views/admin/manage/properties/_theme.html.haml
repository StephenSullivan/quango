.group
  = f.label :logo, t('logo', :scope => "activerecord.attributes.group"), :class => "label"
  -unless @group.new?
    = image_tag(logo_group_path(@group))
  %br
  = f.file_field :logo
  .description
    = t('.logo_legend')
  = text_field_tag "group[logo_info][width]", @group.logo_info["width"] || 215
  x
  = text_field_tag "group[logo_info][height]", @group.logo_info["height"] || 60

.group
  = f.label :custom_favicon, "Favicon", :class => "label"
  -if @group.has_custom_favicon?
    = image_tag(favicon_group_path(@group), :height=>"16px", :width =>"16px")
  -else
    = image_tag("/favicon.ico")
  = f.file_field :custom_favicon

.group
  = f.label :theme, t(:theme, :scope => "activerecord.attributes.group", :default => "Theme" ), :class => "label"
  = f.select :theme, AVAILABLE_THEMES, {}, :class => "choose_theme"

.group
  = f.label :toolbar_bg, "Toolbar BG Colour", :class => "label"
  = f.text_field :toolbar_bg, :class => "text_field"
  .swatch{:style => "background: #{current_group.toolbar_bg}"}
  .description
    = "Leave blank if you want the image"

.group
  = f.label :toolbar_bg_image, "Toolbar BG Image", :class => "label"
  = f.text_field :toolbar_bg_image, :class => "text_field"
  .swatch{:style => "background-image: url(#{current_group.toolbar_bg_image})"}
  .description
    = "the url to where it is uploaded"

.group
  = f.label :header_bg_image, "Header BG Image", :class => "label"
  = f.text_field :header_bg_image, :class => "text_field"
  .swatch{:style => "background: #{current_group.header_bg_image}"}
  .description
    = "the url to where it is uploaded"

.group
  = f.label :background, "Header Background Image", :class => "label"
  -if @group.has_background?
    = image_tag(background_group_path(@group), :width => "468px")
  -else
    = "None set"
  .clear
  = f.file_field :background


.group
  = f.label :primary, "Primary colour", :class => "label"
  = f.text_field :primary, :class => "text_field"
  .swatch{:style => "background: #{current_group.primary}"}

.group
  = f.label :secondary, "Secondary colour", :class => "label"
  = f.text_field :secondary, :class => "text_field"
  .swatch{:style => "background: #{current_group.secondary}"}

.group
  = f.label :tertiary, "Tertiary colour", :class => "label"
  = f.text_field :tertiary, :class => "text_field"
  .swatch{:style => "background: #{current_group.tertiary}"}

.group
  = f.label :custom_css, "Custom css", :class => "label"
  -custom_css = ""
  -@group.has_custom_css? ? custom_css = @group.custom_css.read : custom_css = ""
  = f.text_area :custom_css, :value => custom_css, :class => "text_area"

.group.navform
  = f.submit t('scaffold.update')
