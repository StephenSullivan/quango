.container
  .heading
    = "Company phone & fax"
  .note
    = "Your company phone & fax details appear in the About section of your MOFAQ homepage"


  -# Just do Australia for now - internationalize later
  .about
    .dark-down.inset
      .mobile-form{:style=>"padding:16px"}

        .group
          .note
            = "Phone "
          = f.text_field :group_phone, :class=> "text_field_mobile", :style => "width: 100%"

        .group
          .note
            = "Fax"
          = f.text_field :group_fax, :class=> "text_field_mobile", :style => "width: 100%"

        .group
          %button.submit-button.left{:style=>"margin:0 0 32px;"}
            = "Save"

  .tips
    %ul
      %li
        = "What if my business has multiple phone numbers?"
