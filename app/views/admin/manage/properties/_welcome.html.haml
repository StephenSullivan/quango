- else
  .container{:style=>"padding-top:16px;"}

    .free-trial.light{:style=>"height:60px;width:480px;border-radius:8px;-webkit-box-shadow:inset 0 0 1px #{current_group.text_colour},0 0 1px #{current_group.primary_dark};"}
      .label{:style=>"margin:16px 16px 0;float:left; width:210px;font-size:0.8em;font-weight:bold;line-height:30px;"}
        = "Try before you buy! >>"
      .inner-button{:style=>"float:right;width:168px;font-size:0.8em;margin:12px 16px 0 ;"}
        = link_to 'Activate Free Trial', add_trial_subscription_path(@group), :style=>"color:#{current_group.text_colour};font-size:1.3em;", :class => "inner-button-link"
    .clear

    .dor{:style=>"height:3em;line-height:3em;"}
      = "<b>Or simply...</b>"


    -content_for :after_form do
      .container{:style=>"padding-bottom:16px;"}
        .buy-subscription{:style=>"background:#{current_group.tertiary};border-radius:8px;padding:8px 8px 16px 8px;-webkit-box-shadow:inset 0 0 1px #{current_group.text_colour},0 0 1px #{current_group.primary_dark};"}
          .subs-inner{:style=>"padding:16px;border-radius:8px;"}

            - form_tag "http://0.0.0.0:3001/purchase/test" do
              -#= error_messages
              -# source = domain_url(:custom => @group.domain, :controller => "admin/manage", :action => "properties", :tab => @active_subtab)
              - return_url = "#{domain_url(:custom => @group.domain)}/subscriptions/activate_trial?something=something"
              - cancel_url = "#{domain_url(:custom => @group.domain)}/subscriptions/cancel"

              = hidden_field_tag :currency_code, "aud"
              = hidden_field_tag :user, current_user.id
              = hidden_field_tag :return_url, return_url
              = hidden_field_tag :cancel_url, cancel_url
              = hidden_field_tag :description, "MOFAQ Testy Subscription"
              = hidden_field_tag :group, current_group.id
              %button.submit-button{:style=>"text-transform:none;width:442px;", :action => :submit}
                = " Buy subscription"


            .note{:style=>"margin:16px 0;"}

              = "Your annual subscription gives you unlimited access to the settings and removes the \"expired\" watermark from your headers. Please have your payment details ready. <b>You will be redirected to our secure payment system</b>"
            .paypal{:style=>"background:white;border-radius:4px;-webkit-box-shadow:0 0 8px black;"}
              = image_tag "/images/mofaq/paypal-protection.png"
            .note{:style=>"font-size:0.7em;color:#{current_group.primary};"}
              = "You are about to purchase a MOFAQ Annual Subscription, this will appear on your statement as \"<b>moFAQ(On Software Pty Ltd)</b>\""
            .note{:style=>"font-size:0.7em;color:#{current_group.primary};"}
              = "For your security and convenience we accept only paypal and credit cards, paypal is used to process credit card transactions however you do not need a paypal account"
            .note{:style=>"font-size:0.7em;color:#{current_group.primary};"}
              = "Hang on, <a href=\"#\"><b style=\"border-bottom:1px solid inherit;\">why do I need to buy this?</b></a>"

        .clear

