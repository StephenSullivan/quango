.form
  %h1
    = "Quick create"

  .group
    = f.check_box :has_landing, :class => "checkbox"
    = f.label :has_landing, "Show quick create on welcome page", :class => "radio"

  .group
    = f.label :quick_create_heading,"Quick create heading", :class => "label"
    = f.text_field :quick_create_heading, :class => "text_field", :value => params[:quick_create_heading]

  .group
    = f.label :quick_create_label,"Quick create label", :class => "label"
    = f.text_field :quick_create_label, :class => "text_field", :value => params[:quick_create_label]


  %hr

  %h2
    = "Options"

  .group
    = ">> #{current_group.quick_create.to_s} <<"

    -current_group.doctypes.each do |doctype|
      -if !doctype.hidden?
        -if doctype.id == current_group.quick_create
          = "<span style='background-color:pink'>"
          = f.radio_button :quick_create, doctype.id, :class => "radio_button", :checked => true
          = "#{doctype.name} // #{doctype.id}" << "</span>"
        -else
          = f.radio_button :quick_create, doctype.id, :class => "radio_button", :checked => false
          = "#{doctype.name} // #{doctype.id}"



  .group.navf
    = f.submit t('scaffold.update'), :class => "action-button"





