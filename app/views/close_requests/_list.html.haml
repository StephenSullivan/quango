-if @item
  %ul.close_requests.list
    -item.close_requests.group_by{|f| f.reason}.each do |reason, close_requests|
      %li
        = close_requests.size
        x
        %strong
          = t(reason, :scope=>"close_requests.form")
    -if current_user.mod_of?(current_group)
      = link_to t("scaffold.details"), item_close_requests_path(item)
