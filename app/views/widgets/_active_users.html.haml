%h4{:style=>"background:#{current_group.tertiary}; border-top:4px solid #{current_group.primary}"}
  =h("#{current_group.leaders_label}")
.content
  %ul.members-list
    -widget.active_users(current_group).each do |user|
      -#if user.login != "admin"
      -if width == "wide"
        %li{:style => "height:64px"}
          = render :partial => "users/user_mini", :locals => {:user => user, :width => "wide"}
      -if width == "narrow"
        %li{:style => "height:32px"}
          = render :partial => "users/user_mini", :locals => {:user => user, :width => "narrow"}
  .more
    =link_to t("scaffold.more"), users_path
  .clear
.clear


