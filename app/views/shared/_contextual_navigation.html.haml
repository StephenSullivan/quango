-if @active_tag

  #contextual-navigation
    %ul
      %li.label      
        = "Show: "
      %li.newswires
        =link_to t("layouts.application.wires"), questions_path #{:tags => @active_tag}
      %li.questions
        =link_to t("layouts.application.questions"), questions_path
      %li.discussions
        =link_to t("layouts.application.discussions"), discussions_path
      %li.links
        =link_to t("layouts.application.bookmarks"), bookmarks_path, :options => current_tags
      %li.users
        =link_to t("layouts.application.users"), users_path
      %li.pages.last
        =link_to t("layouts.application.pages"), pages_path
      %li
        %small
          = "(current_tags: " << h(current_tags.to_s).capitalize << ")"
  .clear

-else

  #contextual-navigation
    %span.label
      = "Show: "<< h(current_tags.to_s).capitalize
    %ul
      %li.newswires
        =link_to t("layouts.application.wires"), questions_path #{:tags => @active_tag}
      %li.questions
        =link_to t("layouts.application.questions"), questions_path
      %li.discussions
        =link_to t("layouts.application.discussions"), discussions_path
      %li.links
        =link_to t("layouts.application.bookmarks"), bookmarks_path
      %li.users
        =link_to t("layouts.application.users"), users_path
      %li.pages.last
        =link_to t("layouts.application.pages"), pages_path
      %li
        %small
          = "(current_tags: " << h(current_tags.to_s).capitalize << ")"
  .clear
