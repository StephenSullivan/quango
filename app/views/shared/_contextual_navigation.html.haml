-if @active_tag

  #contextual-navigation{:class => @active_tab}
    %ul
      %li.news
        =link_to t("layouts.application.news"), newsfeeds_path
      %li.video
        =link_to t("layouts.application.videos"), videos_path
      %li.article
        =link_to t("layouts.application.articles"), articles_path
      %li.blog
        =link_to t("layouts.application.blogs"), blogs_path
      %li.question
        =link_to t("layouts.application.questions"), questions_path
      %li.discussion
        =link_to t("layouts.application.discussions"), discussions_path
      %li.bookmark
        =link_to t("layouts.application.bookmarks"), bookmarks_path, :mode=>"bookmark"
