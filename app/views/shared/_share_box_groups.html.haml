
.group-share-box
  = "Join our groups:" 
 
  .inner{:style=>"float:right;width:150px;height:32px; "}

    - if !current_group.other_groups_facebook.empty?
      %div
        = link_to "<img src='/images/share/facebook_32.png' height='28px' width='28px' class='icon'/>", current_group.other_groups_facebook.to_s
    - if !current_group.other_groups_linkedin.empty?
      %div
        = link_to "<img src='/images/share/linkedin_32.png' height='28px' width='28px' class='icon'/>", current_group.other_groups_linkedin.to_s
    - if !current_group.other_groups_twitter.empty?
      %div
        = link_to "<img src='/images/share/twitter_32.png' height='28px' width='28px' class='icon'/>", current_group.other_groups_twitter.to_s

      -#="<a href='#{current_group.other_groups_twitter}' class='twitter-follow-button'>Follow us on Twitter!</a><script src='http://platform.twitter.com/widgets.js' type='text/javascript'></script>"

    - if !current_group.other_groups_google.empty?
      %div
        = link_to "<img src='/images/share/google_32.png' height='28px' width='28px' class='icon'/>", current_group.other_groups_google.to_s


.clear




