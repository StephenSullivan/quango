
.container{:style=>"height:56px"}
  .left{:style=>"height:56px;width:80px;"}
    %a{:href=>"http://mofaq.com?mobile=true", :title => "moFAQ: Every business needs a mobile FAQ"}
      = image_tag("/images/logos/mofaq_logo.png",:height=>"56px",:width=>"80px",  :style => "border:0", :title => "moFaq: Every business needs a mobile FAQ")

  .right{:style=>"height:56px;"}
    -if !logged_in?
      .entry{:style => "margin-left:8px; font-size:1.5em; line-height:56px;text-shadow:-1px -1px 2px black"}
        = link_to "Login", new_user_session_path, :style => "font-weight:bold;color:white;text-decoration:none", :title => "You do not need to login just to ask a question"


    -if logged_in?


      .entry.right{:style => "margin-left:8px; line-height:56px;text-shadow:-1px -1px 2px black"}
        - if current_user.display_name?
          - real_name = "#{current_user.display_name}"
        - else
          - real_name = "#{current_user.first_name} #{current_user.last_name}"

        %strong
          = link_to real_name, "/members/#{current_user.slug}", :style => "font-size:1.5em;font-weight:bold;color:white;text-decoration:none"
        %span.reputation{:title => t("activerecord.attributes.user.reputation"), :style => "border-radius:4px;font-weight:bold;padding:0 8px;background-color:"+current_group.primary+";margin-left:16px;"}=format_number(current_user.reputation_on(current_group))

      -#if current_user.mod_of?(current_group)
        -#.entry
          -#=link_to t("layouts.application.moderate"), moderate_path, :class => "moderate_link"
      -if current_user.owner_of?(current_group)
        .entry.right{:style=>"padding:12px 0;width:56px;height:40px;cursor:pointer;",:onclick=>"window.location.href=\'#{manage_properties_path}\'"}
          =link_to "<img src=\'/images/icons/settings.png\' />", manage_properties_path, :class => "manage_link", :style => "height:40px;width:40px;margin-right:16px;"







