#toolbar{:style => "float:left;width:256px;"}





  -if logged_in?
    -if !current_group.isolate && AppConfig.enable_groups
      .edition
        %ul.topbar.combobox.left
          %li
            = image_tag("#{current_group.favicon_path}",:height=>"16px",:width=>"16px",  :style => "margin:6px 4px 4px 4px", :class => "main-icon")
            =link_to h(current_group.display_name_i), domain_url(:custom => current_group.domain), :style=>"height:24px; line-height:24px;padding:4px 0 4px 0px"
            =link_to h(current_group.display_name_ii), domain_url(:custom => current_group.domain), :style=> "height:24px; line-height:24px;padding:4px 0 4px -4px"

            %ul
              -current_user.groups(:select => [:name, :domain]).each do |group|
                %li
                  -if group.favicon_path?
                    = image_tag( "#{group.favicon_path}",:height=>"16px",:width=>"16px", :style => "height:16px: width:16px; margin:4px 0")
                  -else
                    = image_tag("#{group.favicon_path}",:height=>"16px",:width=>"16px",  :style => "height:16px: width:16px; margin:4px 0 4px -4px")
                  - gname = group.display_name_i + " " + group.display_name_ii.to_s
                  =link_to h(gname), domain_url(:custom => group.domain), :style=>"height:24px; line-height:24px;padding:4px"

    -else
      .edition
        %ul.topbar.combobox.left
          %li
            = image_tag("#{current_group.favicon_path}",:height=>"16px",:width=>"16px",  :style => "margin:6px 4px 4px 4px", :class => "main-icon")
            =link_to h(current_group.display_name_i), domain_url(:custom => current_group.domain), :style=>"height:16px: width:16px; padding:4px 0"
            =link_to h(current_group.display_name_ii), domain_url(:custom => current_group.domain), :style=> "height:16px: width:16px; margin:4px 0 4px -4px"


  -else
    .edition
      %ul.topbar.combobox.left
        %li
          = image_tag("#{current_group.favicon_path}",:height=>"16px",:width=>"16px",  :style => "margin:6px 4px 4px 4px", :class => "main-icon")
          =link_to h(current_group.display_name_i), domain_url(:custom => current_group.domain), :style=>"margin:0px;"
          =link_to h(current_group.display_name_ii), domain_url(:custom => current_group.domain), :style=> "margin:0 0 0 -2px;"






#toolbar{:style => "float:right;width:640px;"}



  -if !logged_in?
    .entry{:style => "margin-left:8px"}
      = link_to "Login", new_user_session_path
    .entry
      = link_to h(current_group.about_label), "/about/community"
      |
    .entry
      = link_to h("FAQ"), "/about/faq"
      |

  -if logged_in?

    .entry
      =link_to t("layouts.application.logout"), destroy_user_session_path






    -#.entry
      -#=link_to h("My Edition"), user_path(current_user)
      -#| 
    .entry
      =link_to h("My Profile"), user_path(current_user)
      | 
    -#.entry
      -#=link_to h("My Community"), user_path(current_user)
      -#|
    .entry
      =link_to h("My Settings"), settings_path(:tab => "welcome")
      |

  -if current_user.mod_of?(current_group)
    .entry
      =link_to t("layouts.application.moderate"), moderate_path, :class => "moderate_link"
      |

      - real_name = "#{current_user.first_name} #{current_user.last_name}"
      %strong= link_to(h(real_name), user_path(current_user))
      %span.reputation{:title => t("activerecord.attributes.user.reputation"), :style => "background-color:"+current_group.primary+""}=format_number(current_user.reputation_on(current_group))
      |


  -if current_user.owner_of?(current_group)
    .entry
      =link_to "&#x2620;", manage_properties_path, :class => "manage_link", :style => "font-size:1.5em;"
      |


  -if logged_in?
    .entry
      %ul.topbar.createbox.left
        %li
          =link_to "#{current_group.publish_label.capitalize}", "#", :rel => 'nofollow'
          %ul
            - current_group.doctypes.each do |doctype|

              - if !doctype.hidden && doctype.public_access
                %li
                  = link_to "#{doctype.create_label}", new_item_path(doctype), :class => "something", :style => "height:18px; line-height:18px;" 


