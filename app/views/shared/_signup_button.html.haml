
-if !logged_in? && current_group.show_signup_button?

  -if width == "wide"
    .block
      %div{:style => "width:300px;height:90px; border-bottom: 1px solid white; background-color:#{current_group.secondary}"}
        %div{:style => "font-size:13px; padding:4px 8px 0 8px; font-weight:bold; color:white; "}
          = current_group.signup_button_title
        %div{:style => "font-size:11px; margin-bottom:8px "}
          = current_group.signup_button_description

        %div{:style => "font-size:16px; margin-bottom:8px; height:32px;position:relative;"}
          = link_to current_group.signup_button_label, new_user_path, :class => "standard-button", :style => "height:28px; line-height:28px ;margin:0 8px; width:250px;font-weight:bold; font-size:12px;border-color:#555" #background-color:#{current_group.primary};color:white"

        %div{:style => "font-size:12px; padding:0 8px; float:right; color: black "}
          = current_group.signup_button_footnote
          = "Already a member? <a href='/users/login' style='color:black; font-weight:bold;'><span style='text-decoration:underline'>Lo</span>g<span style='text-decoration:underline'>in here</span></a>"
      .clear


  -if width == "narrow"
    %h3
      = "Join!"
    .block
      .group-button{:style => "border-bottom: 1px solid white"}
        %div{:style => "font-size:14px; margin:4px; font-weight:bold;color:white "}
          = current_group.signup_button_title
        %div{:style => "font-size:12px; margin-bottom:8px "}
          = current_group.signup_button_description
        %div{:style => "font-size:18px; margin-bottom:8px "}
          = link_to current_group.signup_button_label, new_user_path, :class => "create-button", :style => "height:22px; margin:0 auto;font-size:12px; width:114px;font-weight:bold; text-align:center;"
        %div{:style => "font-size:12px; margin-bottom:8px "}
          = current_group.signup_button_footnote
      .clear
-else
  -if width == "wide"
    .block
      %div{:style => "width:300px;height:90px; border-bottom: 1px solid white; background-color:black"}
      .clear

  -if width == "narrow"






