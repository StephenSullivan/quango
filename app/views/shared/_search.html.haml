.search-box{:style => "height:60px;"}
  - form_tag search_path, :method => :get, :style => "margin-left: 20px; max-width: 10%; display: inline" do
    = text_field_tag :q, params[:q], :id => "search-field"
    %button=">>"
    %br
      = radio_button_tag(:mode, "here", true)
      = label_tag "Here"
      = radio_button_tag(:mode, "there")
      = label_tag "There"
      = radio_button_tag(:mode, "everywhere")
      = label_tag "& Everywhere"

