-if width == "narrow"

  %h3
    = "Contribute"

  %div{:style => "background-color:#ffffff; width:140px;padding:0 0 4px 0"}
    %ul
      - current_group.doctypes.each do |doctype|

        - if !doctype.hidden
          %li{:style=>"padding:2px 0; height:22px;"}
            = link_to "#{doctype.create_label}", new_item_path(doctype), :class => "standard-button", :style => "border:2px solid green; background-color:green;font-weight:bold; width:132px;height:18px; margin:2px: line-height:18px;"

-if width == "wide"

  %h3
    = "How to contribute..."

  %div{:style => "float:left;width:100px;padding:0 0 4px 0; margin:4px 0;"}
    %ul
      - current_group.doctypes.each do |doctype|

        - if !doctype.hidden
          %li{:style=>"padding:2px 0; height:22px;"}
            = link_to "#{doctype.create_label}", new_item_path(doctype), :class => "standard-button", :style => "border:2px solid green; background-color:green;font-weight:bold;  width:132px;height:22px; margin:2px; line-height:22px;" 

  %div{:style => "float:right; width:152px;margin:8px 4px;padding:4px;"}
    = "Anybody is welcome to contribute to this community, simply sign up for a free account and get involved now!"

  .clear

