- user = current_user

.block
  %sidebar-inner.heading{:style=>"width:140px;border-bottom:1px solid gainsboro"}
    = "My profile"
  .content
    = render :partial => "users/user_mini", :locals => {:user => user, :width => "square"}
  .content{:style=>"padding-bottom:10px;margin-bottom:10px; border-bottom:1px solid gainsboro"}
    = user.bio

  - if user.website_url?
    .user-links{:style=>"padding-bottom:10px;margin-bottom:10px; border-bottom:1px solid gainsboro"}
      = "Web:"
      = link_to "#{user.website}","#{user.website_url}" 
  
  - if user.twitter?
    .user-links
      -#%span{:style=>"float:left"}
      = "My networks:"
      -#= link_to "#{user.twitter_url}", "Twitter" 

      = "<a href=\"https://twitter.com/#{user.twitter_url}\" class=\"twitter-follow-button\">Follow #{user.twitter_url}</a>"
      = "<script src=\"http://platform.twitter.com/widgets.js\" type=\"text/javascript\"></script>"


  - if user.linkedin?
    .user-links
      -#%span{:style=>"float:left"}
        -#= image_tag "/images/logos/linkedin.png", :height=>"16px"

      = "<script src=\"http://platform.linkedin.com/in.js\" type=\"text/javascript\"></script>"
      = "<script type=\"IN/MemberProfile\" data-id=\"#{user.linkedin_url}\" data-format=\"click\" data-text=\"View my proile\"></script>"

