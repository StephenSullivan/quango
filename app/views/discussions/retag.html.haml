
-content_for :subtabs do
  .navtitle
    = t(".title", :title => h(@discussion.title))

#move_discussion
  .markdown{:style => "width: 92%"}
    = markdown(@discussion.body)

  .tag-list
    -@discussion.tags.each do |tag|
      %span.tag
        = link_to h(tag), url_for(:controller => "discussions", :action => "index", :tags => tag), :rel => "tag"
  %div
    %b
      = t("discussions.show.asked_on")
      = link_to h(@discussion.group.name), domain_url(:custom => @discussion.group.domain)

  = render :partial => "discussions/retag_form"
