-feed_url = url_for(:format => "atom", :tags => params[:tags])

-content_for :trends do
  = render :partial => "items/item_topics", :object => @tag_cloud

-content_for :rss do
  %link{:rel=>"alternate", :type=>"application/atom+xml", :title => "atom", :href=> url_for(:format => "atom", :tags => params[:tags])}
  %link{:rel=>"alternate", :type=>"application/atom+xml", :title => "atom", :href=> url_for(:format => "atom")}

-content_for :subtabs do
  .secondary-navigation{:class => @active_subtab.to_s}
    .navlabel
      = t("layouts.application.discussions")
    .navcontrols
      .subtabs
        %ul
          %li.newest
            = link_to t("items.index.newest"), discussions_path(:sort=>"newest"), :title => t("items.index.newest_tooltip"),:class=>"button"
          %li.hot
            = link_to t("items.index.hot"), discussions_path(:sort=>"hot"), :title => t("items.index.hot_tooltip"),:class=>"button", :rel => "nofollow"
          %li.votes
            = link_to t("items.index.votes"), discussions_path(:sort=>"votes"), :title =>  t("items.index.votes_tooltip"),:class=>"button", :rel => "nofollow"
          %li.activity
            = link_to t("items.index.active"), discussions_path(:sort=>"activity"), :title => t("items.index.active_tooltip"),:class=>"button", :rel => "nofollow"

-content_for :sidebar_right do
  -if logged_in?
    = render :partial => "shared/language_filter"

  = render :partial => "shared/current_tags"
  .block
    %h3
      = t('.tags', :default => [:"layout.application.tags", :"activerecord.attributes.user.tags", "tags"])
    .content
      = render :partial => "shared/tag_list", :object => @tag_cloud

-content_for :sidebar_left do
  .block
    %h3
      = h("Video")
    .content
      = render :partial => "videos/video_player_small"
  .block
    %h3
      = h("Something")
    .content
      = h("Something else")

-content_for :list do

  %ul.items#items
    -if @items.empty?
      %li.highlight
        = t(".empty")
    -@items.each do |item|
      -if item.mode == "discussion"
        = render :partial => "item", :object => item

  #additional_info
    =will_paginate @items

    #help_us
      = t(".help_to_answer")
      =link_to t(".unanswered_items"), unanswered_items_path

    .clear

/Layout
-content_for :main do



  #main.right
    #topics
      = render :partial => "items/topic_map", :mode => @mode
    .clear
    #sidebar.left
      = yield :sidebar_left

    #sidebar.right
      = yield :sidebar_right
    .clear

  #main.left
    = yield :subtabs
    .clear
    = yield :list
  .clear

