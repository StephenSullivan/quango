-content_for :main do

  #main-index

    %h1
      = "Listing suctions for"
      = current_group.name
    %small
      = link_to current_group.name, group_path(current_group)

    %p
      = link_to 'New suction', new_suction_path #(@group)

    %p
      %table
        %tr
          %th
            = "name"
          %th
            = "order"
          %th
            = "#"
          %th
            = "actions"
        - current_group.suctions.each do |suction|
          %tr
            %td
              = suction.name.to_s
            %td.order
              -form_tag move_suction_path(suction) do
                = submit_tag("up", :name=>"move_to", :value => "up") 
                = submit_tag("down", :name=>"move_to", :value => "down")
            %td
              = "#{suction.items.count.to_i}"
            %td
              = link_to 'List Items', list_suction_path(suction)
              = link_to 'Show', suction_path(suction)
              = link_to 'Edit', edit_suction_path(suction)
              = link_to 'Destroy', suction_path(suction), :confirm => 'Are you sure?', :method => :delete





