- future = local_assigns[:custom_helper_var]
- time = Time.new
- today = time.wday

- offset = today + 1 + future.to_i

= future.inspect()

= "offset:" + "#{offset}"

#suntheatre_movies
  - node_array = fetch_html_nodes("http://www.suntheatre.com.au/component/yco?view=yco&day=" + "#{offset}","yco_movie")
  - node_array.each do |node|
    .inset{:style=>"margin-bottom:16px;width:448px;"}
      = node.to_s
      .clear
