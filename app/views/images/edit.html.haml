-content_for :main do

  #main-index

    %h1
      = "Editing image"

    %p
      - form_for @image, :url => item_image_path(@item), :html => {:multipart => true} do |f|
        = f.error_messages
        %p
          = f.text_field :name, :value => @image.name
        %p
          = f.file_field :image, :value => @image.image
        %p
          = f.submit 'Update'

    %p
      = link_to 'Show', item_image_path
      = link_to 'Back', item_images_path
