- content_for :secondary_navigation do
  .secondary-navigation-sections
    %small
      = "Back to: "
      = link_to @item.title, item_path(@item), :class=>"standard-button"
  

- content_for :main do
  #main-index
    .title
      =@item.title << "'s Images"

    = yield :secondary_navigation


    %p
      = link_to 'Add a New image', new_item_image_path(@item), :class => "action-button"

    %p
      %table{:class => "image-table"}
        %tr
          %th
            = "default"
          %th
            = "name"
          %th
            = "thumbnail"
          %th
            = "actions"
          - unless @item.images.empty?
            - @item.images.each do |image|
              %tr
                %td
                  -if @item.default_thumbnail == image.id
                    = image_tag("/images/buttons/radio_button_on.png" , :title => "selected")
                    %input{:type => "radio", :name => "default_avatar", :style => "height:20px; width:20px", :checked => true}
                  -else
                    = link_to "set", set_default_thumbnail_item_image_path(@item, image)
                    -#%input{:type => "radio", :name => "default_avatar"}
                %td
                  = image.name.to_s
                %td
                  - cropped_image = image.image.process(:thumb,image.image_cropping)
                  = image_tag cropped_image.process(:thumb,"128x").url, :alt => image.name, :title => image.name
                %td.order
                  -form_tag move_item_image_path(@item, image) do
                    = submit_tag("up", :name=>"move_to", :value => "up") 
                    = submit_tag("down", :name=>"move_to", :value => "down")
                %td
                  = link_to 'Show', item_image_path(@item, image)
                  = link_to 'Edit', edit_item_image_path(@item, image)
                  = link_to 'Cropping', crop_item_image_path(@item, image), :class => "action-link"
                  = link_to 'Destroy', item_image_path(@item, image), :confirm => 'Are you sure?', :method => :delete



-content_for :sidebar_inner do
  #sidebar-inner
    = render :partial => "items/default_image", :locals => {:item => @item}
    = render :partial => "items/images", :locals => {:item => @item}
    .block
      %h3
        = h("Tips")
      .content
        = h("This is an example of a good profile image")
      .content
        = h("This is an example of a bad profile image")

