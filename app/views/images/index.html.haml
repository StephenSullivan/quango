-content_for :main do

  #main-index

    %h1
      = "Listing images"

    %p
      = link_to 'New image', new_image_path

    %p
      %table
        %tr
          %th
            = "name"
          %th
            = "actions"
        - @images.each do |image|
          %tr
            %td
              = image.name
            %td
              = link_to 'Show', image
              = link_to 'Edit', edit_image_path(image)
              = link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete





