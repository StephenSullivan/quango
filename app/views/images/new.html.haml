
-content_for :subtabs do
  .navtitle
    = t(".title")
-content_for :sidebar do
  -if !current_group.item_help.empty?
    .help
      %h4
        = t(".how_to_ask")
      =current_group.item_help

-content_for :main do

  = "get the params:</br>"
  = h(params[:source])
  = h(params[:file])
  = t(params[:file])


  - form_for(@image, :html=>{:class => "form", :id => "ask_item"}) do |f|
    =render :partial => "edit_form", :locals => {:f => f}

    .group.navform
      .controls.left{:style => "width: 50%"}

      = f.submit t('scaffold.create')
      = t("global.or")
      = link_to t('scaffold.cancel'), items_path, :class => "button cancel"
