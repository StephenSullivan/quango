-title = h(item.title)


%li

  -if item.closed
    -title += " [#{t("closed", :scope => "activerecord.attributes.item").upcase}]"

  -if !local_assigns[:mini]
    -owner = nil
    -if item.last_target.present?
      -last_target = item.last_target
      -if last_target.respond_to?(:updated_by) && last_target.updated_by.present?
        -owner= last_target.updated_by
      -else
        -owner= last_target.user
    -else
      -last_target = item
      -owner = item.user unless item.anonymous




    .thumbnail{:class => class_for_item(item),:style=>"width:145px; float:right;border-right:1px solid white"}
      -cache("item_on_index_#{item.id}_#{I18n.locale}") do
        -if item.default_thumbnail?


          - image = Image.find(item.default_thumbnail)
          - base_image = image.image.process(:thumb,image.image_cropping)
          - base_thumbnail = base_image.process(:thumb,"144x")
          - base_thumbnail_grey = base_thumbnail.process(:greyscale, "20")

          %a.features-thumbnail{:style => "background-image:url(#{base_thumbnail.url});width:145px;height:80px; overflow:hidden" }

            -#= link_to image_tag(base_thumbnail_grey.url, :class => 'a', :alt => image.name, :title => image.name,:style => "position: absolute;width:145px;" ), item_path(item.doctype, item)
            -#= link_to image_tag(base_thumbnail.url, :class => 'b', :alt => image.name, :title => image.name,:style => "position: absolute;width:145px;" ), item_path(item.doctype, item)

            .inner-link{:style=>"margin-top:32px;opacity:0.6;width:136px;background-color:black; color:white;position:absolute:font-size:12px;height:32px; line-height:12px;padding:4px;letter-spacing:-1px;"}
              .text
                = link_to title, item_path(item.doctype, item), :title => truncate(strip_tags(item.body), :length => 64), :style => "opacity:1;margin-top:-48px;color:white; font-weight:bold;"





        -else

          .thumbnail-placeholder{:style => "background-color:#{current_group.secondary};width:145px;height:70px; overflow:hidden;"  }

            .inner-link{:style=>"margin-top:32px;opacity:0.6;width:136px;overflow:hidden;background-color:black;position:absolute;font-size:12px;height:30px; line-height:12px;padding:4px;letter-spacing:-1px;color:white"}

              = link_to title, item_path(item.doctype, item), :title => truncate(strip_tags(item.body), :length => 64), :style => "padding:4px 0 4px 0;color:white; font-weight:bold;"

            = link_to image_tag("/images/spacer.gif", :style => "background-color:#{current_group.secondary};width:145px;height:70px"), item_path(item.doctype, item)


          -#.inner-content{:style=>"padding-bottom:8px; margin-bottom:8px;border-bottom:1px solid gainsboro"}



            .inner-author{:style=>"height:16px;margin-bottom:4px;display:none"}
              = "By " 
              = link_to h(item.user.display_name), user_path(item.user)

            .inner-teaser{:style=>"height:80px; display:none"}
              = h(truncate(strip_tags(item.body), :length => 160) )




      .clear

