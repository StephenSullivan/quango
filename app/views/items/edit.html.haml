= javascript_include_merged :show

-content_for :sidebar do
  #sidebar
    = render :partial => "shared/community_sponsor", :locals => {:width => "narrow"}

-content_for :sidebar_inner do
  #sidebar-inner

    -if !current_group.item_help.empty?
      .help
        %h3
          = t(".how_to_ask")
        =current_group.item_help
    %h3
      = "Similar"

    .related-item
      %ul.items#related_items

-content_for :main do
  #main-index
    .supplementary-navigation{:class => @active_subtab.to_s, :style => "height:35px; line-height:35px; padding:0 8px 0 8px"}
      = current_group.publish_label.capitalize + " " + @doctype.name  
    - form_for(@item, :url => item_path(@doctype, @item), :html => {:class => "form"}) do |f|
      =render :partial => "form", :locals => {:f => f}
      .group.navform
        .controls.right{:style => "width: 50%"}
          .left{:style => "width: 49.5%"}
            = f.label :wiki, "Wiki", :class => "radio"
            = f.check_box :wiki, :class => "checkbox"
          .left{:style => "width: 49.5%"}
            = f.label :anonymous, t("scaffold.post_as_anonymous"), :class => "radio"
            = f.check_box :anonymous, :class => "checkbox"

        = f.submit t("scaffold.update")
        = t("global.or")
        = link_to t('scaffold.cancel'), items_path, :class => "button cancel"





