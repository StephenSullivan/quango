-title = h(item.title)


-if item.closed
  -title += " [#{t("closed", :scope => "activerecord.attributes.item").upcase}]"

-if item.doctype?






  %tr
    %td
      .inner-button.submit.inset{:style=>"text-align:center;font-weight:bold;margin:8px 0 4px 0;height:56px;line-height:56px;border-radius:32px;width:32px;"}
        = "?"
    %td
      .question-title{:style=>"margin:8px 0 4px 16px"}
        = link_to item.title, "#{item_path(item.doctype.name, item)}", :title => truncate(strip_tags(item.body), :length => 88)
        



        


