-title = h(item.title)


-if item.closed
  -title += " [#{t("closed", :scope => "activerecord.attributes.item").upcase}]"

-if item.doctype?





  %tr
    %td
      .inner-button.inset{:style=>"font-size:3em;text-align:center;font-weight:bold;margin:8px 0 4px 0;height:56px;line-height:56px;border-radius:32px;width:32px;"}
        = link_to "?", "#{item_path(item.doctype.name, item)}",:style=>"color:#{current_group.text_colour}"

    %td
      .inset.question-title{:style=>"margin:8px 8px 4px 8px; background:#{current_group.secondary}"}
        = link_to item.title, "#{item_path(item.doctype.name, item)}", :title => truncate(strip_tags(item.body), :length => 88), :style=>""



        


