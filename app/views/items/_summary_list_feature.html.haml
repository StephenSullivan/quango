-title = h(item.title)
-if item.closed
  -title += " [#{t("closed", :scope => "activerecord.attributes.item").upcase}]"

-if !local_assigns[:mini]
  -owner = nil
  -if item.last_target.present?
    -last_target = item.last_target
    -if last_target.respond_to?(:updated_by) && last_target.updated_by.present?
      -owner= last_target.updated_by
    -else
      -owner= last_target.user
  -else
    -last_target = item
    -owner = item.user unless item.anonymous

  %li.thumbnail{:class => class_for_item(item)}
    -cache("item_on_index_#{item.id}_#{I18n.locale}") do
      -if item.default_thumbnail?
        .thumbnail
          - image = Image.find(item.default_thumbnail)
          - base_image = image.image.process(:thumb,image.image_cropping)
          - base_thumbnail = base_image.process(:thumb,"233x")
          = link_to image_tag(base_thumbnail.url, :class => 'none', :alt => image.name, :title => image.name), item_path(item.doctype, item)

        .inner-content
          %div{:style=>"height:176px"}
            .inner-link{:style=>"font-size:14px;font-weight:bold;height:32px;border-bottom:1px dotted #{current_group.tertiary}; padding-bottom:4px; margin-bottom:4px;"}
              = link_to title, item_path(item.doctype, item), :title => truncate(strip_tags(item.body), :length => 200)
              .inner-topics{:style=>"display:none"}
                -topics_array = Array.new
                -item.first_tags.each do |topic|
                  -topics_array << topic
                -topics_array[0..1].each do |topic|
                  %span.tag-list{:class => "tag_#{h(topic)}"}
                    = link_to h(topic), url_for(:controller => "items", :action => "index", :topics => topic), :rel => "tag", :title => t("items.tags.tooltip", :tag => topic)
   
            .inner-teaser{:style=>"height:104px; text-overflow:hidden"}
              = h( truncate(strip_tags(item.body), :length => 256) )
            .inner-link
              = link_to "Read more...", item_path(item.doctype, item), :title => truncate(strip_tags(item.body), :length => 200)

      -else

        .thumbnail
          = image_tag "http://dummyimage.com/233x131/#{current_group.primary}/fff.gif&text=#{item.doctype.to_s}"  


        .inner-content{:style => "width:100%"}

          .inner-link{:style=>"font-size:14px;font-weight:bold;height:32px;border-bottom:1px dotted #{current_group.tertiary}; padding-bottom:4px; margin-bottom:4px;"}
            = link_to title, item_path(item.doctype, item), :title => truncate(strip_tags(item.body), :length => 96)

          .inner-teaser
            = h(truncate(strip_tags(item.body), :length => 160) )

          .inner-topics
            -topics_array = Array.new
            -item.first_tags.each do |topic|
              -topics_array << topic
            -topics_array[0..1].each do |topic|
              %span.tag-list{:class => "tag_#{h(topic)}"}
                = link_to h(topic), url_for(:controller => "items", :action => "index", :topics => topic), :rel => "tag", :title => t("items.tags.tooltip", :tag => topic)






    .clear

