.author
  .user_data{:style => "font-size:1em"}
    %span.asked_by{:style=>"float:left; margin-right:7px; font-size:12px"}
      = "Posted by"
      = render :partial => "users/show_mini", :locals => {:user => @item.user}

  .clear
- if @item.updated_by.present?
  .editor
    .user_data
      %span.asked_by
        = "Edited by"
      =render :partial => "users/show_mini", :locals => {:user => @item.updated_by}
      %span.time_ago.published{:title => @item.updated_at, :class => "relativetime"}
        = t("time.ago", :time => time_ago_in_words(@item.updated_at))
  .clear
.clear
