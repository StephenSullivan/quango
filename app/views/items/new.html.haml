= javascript_include_merged :show

-content_for :subtabs do
  .navtitle
    = t(".title")
  .details
    -#= local_params

-content_for :sidebar do
  #sidebar
    -#= render :partial => "shared/community_sponsor", :locals => {:width => "narrow"}
    = render :partial => "shared/signup_button", :locals => {:width => "narrow"}
    .block
      %h3
        = "Similar communities"
      .content
        = "Lists"

-content_for :sidebar_inner do
  #sidebar-inner

    .help
      %h3
        = "Hints"
      = @doctype.help_text

    %h3
      = "Similar content"

    .related-item
      %ul.items#related_items


-content_for :main do
  #main-index
    .supplementary-navigation{:class => @active_subtab.to_s, :style => "height:35px; line-height:35px; padding:0 8px 0 8px"}
      = @doctype.create_label  



    -if logged_in? && @item.doctype.has_video?
      - form_for(@item, :html=>{:class => "form mainAnswerForm", :id => "ask_item"}) do |f|
        =render :partial => "form_for_video", :locals => {:f => f, :doctype => @doctype}
    -if logged_in? && @item.doctype.has_links?
      - form_for(@item, :html=>{:class => "form mainAnswerForm", :id => "ask_item"}) do |f|
        =render :partial => "form_for_links", :locals => {:f => f, :doctype => @doctype}
    -elsif logged_in?
      - form_for(@item, :html=>{:class => "form mainAnswerForm", :id => "ask_item"}) do |f|
        =render :partial => "form", :locals => {:f => f, :doctype => @doctype}

    -else
      %p
        = "You must be logged in to " + @doctype.create_label.downcase
      %p
        = "Please either "
        =  link_to "login", new_user_session_path
        = " or "
        = link_to "become a member", new_user_path 




