-content_for :main do

  #main-index

    %h1
      = "Listing categories for"
      = current_group.name


    %p
      = link_to 'New bunny', new_category_path(@group)

    %p
      %table
        %tr
          %th
            = "name"
          %th
            = "actions"
        - @group.categories.each do |category|
          %tr
            %td
              = category.name.to_s
            %td
              = link_to 'Show', _path(@item.doctype_id, @item, bunny)
              = link_to 'Edit', edit_item_bunny_path(@item.doctype_id, @item, bunny)
              = link_to 'Destroy', item_bunny_path(@item.doctype_id, @item, bunny), :confirm => 'Are you sure?', :method => :delete





