%a.badge{:class => badge.type , :href => badge_path(:id => badge.token)}
  %span.badgeicon{:class => badge.type, :style => "display: none"}
  =badge.name

-if !local_assigns[:hide_user] && !local_assigns[:mini]
  %small.user
    =link_to h(truncate(badge.user.login, :length => 20)), user_path(badge.user), :title => h(badge.user.login)
