.follow-info.button.right
  -if current_user != @user
    -if logged_in? && current_user.following?(@user)
      =link_to "- Stop Following", unfollow_user_path(@user), :class => "unfollow_link", 'data-class' => "follow_link", 'data-title' => "+ Follow me", 'data-undo' => follow_user_path(@user)
    -else
      =link_to "+ Follow Me", follow_user_path(@user), :class => "follow_link", 'data-class' => "unfollow_link", 'data-title' => "- Stop following", 'data-undo' => unfollow_user_path(@user)

