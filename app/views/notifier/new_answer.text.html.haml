- new_answer = find_and_preserve("<pre style='font-size:20px'>"+ shapado_auto_link(markdown(@answer.body, :group => @group))+"</pre>")
- item = link_to h(@item.title), url_for(:host => @domain, :controller => "items", :action => "show", :id => @item.slug)

%p
  = t('notifier.global.hi', :user => h(@user.login))
  %br
    = t('.message', :user => h(@answer.user.login), :new_answer => new_answer, :item => item)
