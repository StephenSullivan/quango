%h3
  = "Free to join..!"

-if logged_in?
  .block
    -if (params[:target] = "welcome")
      .group-button{:style => "width:256px;height:132px; border-bottom: 1px solid white"}
        %small{:style => "font-size:11px "}
          = "Not a member?"
        = link_to "&#9733; free signup", new_user_path, :class => "login-button", :style => "font-weight:bold;"
        %div.small
          = "And start thinking daily..."

    -else
      .group-button{:style => "width:232px;background-color:#{current_group.primary}; font-size:16px "}
        %small{:style => "font-size:11px "}
          = "#{current_group.name} is thinking daily...<br/>"
        = "ARE <u>YOU</u> THINKING DAILY?<br/>"
        %small{:style => "font-size:11px "}
          = "Find out here:"
        -form_for current_group  do |f|
          = f.error_messages
          %div.left
            -if logged_in?
              = f.text_field :subdomain, :value => current_user.first_name.downcase, :class=>"gb_input", :style => "width:72px; background-color:#{current_group.secondary}; border:0; color:white; font-size:18px"
              = f.hidden_field :name, :value => current_user.first_name.downcase, :style => "width:180px; background-color:#{current_group.secondary}; color:white; font-size:18px"
              = ".thinkingdaily.com"
            -else
              = f.text_field :name, :value => "Empty", :class=>"gb_input", :style => "width:48px;text-overflow:hidden, background-color:#{current_group.secondary}"
              = ".thinkingdaily.com"

          %div.right
            = f.submit  "Check availability", :class => "action-button"
        .clear
        %div.small
          ="Find out more..."


-else
  .block
    .group-button{:style => "width:132px;height:188px; padding-top:64px"}
      %small{:style => "font-size:11px "}
        = "Not a member?"
      = link_to "SIGNUP<br/>", new_user_path, :class => "login-button", :style => "font-weight:bold;"
      %div.small
        = "And start thinking daily..."
  .clear






