- expanded = local_assigns[:expanded]



.container{:style=>"padding:8px 0 0 0"}


  .container{:style=>"padding:0;margin:16px 0;"}
    .frame.inset.primary{:style=>"padding:16px;"}
      %h2
        = "#{current_group.display_name}"
      -if current_group.strapline != ""
        = "#{current_group.strapline}" 

  .left{:style=>"width:50%;padding:8px 16px;border-radius:4px;Xbackground:#{current_group.primary}"}
    %h2
      = "Our Business"
    = current_group.description
  
  .right{:style=>"width:190px;padding:8px 0 8px 0;border-radius:4px;Xbackground:#{current_group.primary}"}

    -if current_group.locations.count > 1

      %h2
        = "Locations..."

      - @group.locations.each do |location|
        .group
          .inner-button.submit{:style=>"margin:4px 8px;width:156px;text-align:center;line-height:32px;height:32px;font-size:16px;"}
            = link_to location.loc_city.to_s, location_path(location), :style=>"color:#{current_group.text_colour};"
   
      .note{:style=>"color:#{current_group.tertiary};"}
        = "Please choose from above or click the &raquo;<span style=\'color:#{current_group.text_colour};\'>Locations</span>&laquo; below"


    -else

      .address{:style=>"font-weight:bold;"}
        %h2
          = "Address"

        .group
          = "#{current_group.display_name}"
        .group
          = "#{current_group.group_address_i}"
        .group
          = "#{current_group.group_address_ii}"
        .group
          = "#{current_group.group_city}"
        .group
          = "#{current_group.group_state} "
          = "#{current_group.group_postcode}"

        .group{:style=>"size:1em;text-transform:uppercase;font-weight:bold;"}
          = "#{current_group.group_region}"

        -if current_group.group_phone
          %hr{:style=>"margin-top:8px"} 
          .inner-button.submit{:style=>"width:164px;height:32px;font-size:1.1em;letter-spacing:-1px;text-align:center;margin:4px auto;line-height:32px;float:right;"}
            = link_to "â˜Ž Click to call","tel:#{current_group.group_phone}",:style=>"color:#{current_group.text_colour};"
          .clear


          .subheading{:style=>"padding:8px 0;"}
            = "Tel:"
            = link_to "#{current_group.group_phone}","tel: #{current_group.group_phone}"
        -if current_group.group_fax != ""
          .group
            = "Fax: #{current_group.group_fax}"

  .clear

  -if current_group.group_hours != ""
    .container{:style=>"padding:0;margin-top:16px;"}
      .light.inset{:style=>"padding:16px;"}
        %h2
          = "Opening hours: "
        = "#{current_group.group_hours}"  


  -if current_group.group_website != ""
    .container{:style=>"padding:0;margin-top:16px;"}
      .primary.inset{:style=>"padding:16px;height:56px;"}
        .inner-button.submit{:onclick=>"window.location=\'http:\/\/#{current_group.group_website}?noredirection=true\'",:style=>"width:416px;text-align:center;line-height:48px;"}
          = "Visit main website"  



