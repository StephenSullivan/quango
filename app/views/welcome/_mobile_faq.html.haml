- expanded = local_assigns[:expanded]

.frame
  .light-down{:style=>"padding:8px;border-radius:8px;margin-top:8px;"}
    .inset
      .note
        = "Here are some of our most frequently asked questions"

      %ul.features
        -if current_group.items.empty?
          %li.highlight
            = t(".empty")
        -else
          - @items.reverse[0..5].each do |item|
            %li{:style=>"overflow:hidden; height:24px;margin:2px 0"}

              .question-bullet
                = "?"
              .question-title
                = link_to item.title, "#{item_path(item.doctype.name, item)}", :title => truncate(strip_tags(item.body), :length => 88)


    .clear

    .quick-create.dark{:style=>"padding:8px;border-radius:8px;margin-top:8px;"}
      = render :partial => "shared/quick_create_mobile"


.clear




