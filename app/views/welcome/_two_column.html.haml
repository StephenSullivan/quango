- expanded = local_assigns[:expanded]


.section-head-welcome{:style=>"border-bottom:10px solid white;"}

  .section-listing-welcome{:class => "summary"}

    #welcome-content
      -#= "hello"
      -@doctypes[3..100].each do |doctype|
        -if !doctype.hidden?

          .div.left{:style=>"height:256px;width:362px;background-color:#ffffff;border-right:1px solid white;border-bottom:1px solid gainsboro;padding-bottom:8px;margin-botton:8px display:block"}
            - section_link = doctype.name.capitalize
            .div.inner{:style=>"margin:0"}
              %h4{:style=>"background:#{current_group.tertiary}; border-top:4px solid #{current_group.primary}"}
                %div{:style=>"padding:1px 0 3px 4px; height:18px; width:18px; float:left;"}
                  = "<img src='/images/logos/star_16.png' height='14px' width='14px'/>"
                = link_to section_link, items_path(doctype), :style => "color: #{current_group.primary};", :object => doctype, :style => "color:white"

              .content

                -#%ul.features
                -if doctype.items.empty?
                  %li.highlight
                    = t(".empty")
                -else

                  -# doctype_items_array = Array.new
                  -# doctype.items.reverse.each do |item|

                    -# if item.doctype_id == doctype.id
                      -# doctype_items_array << item


                  -#= "array size: #{doctype_items_array.size}"
                  -#= "array content: #{doctype_items_array}"


                  -# doctype_items_array[0] do |item|


                  - doctype.items.reverse[0..0].each do |item|

                    .summary-list-text
                      = render :partial => "/items/two_column_leader", :locals => {:item => item} #, :sort=>"hot"}



                  .more{:style=>"height:230px"}
                    .summary-list-text
                      - doctype.items.reverse[1..5].each do |item|
                        .summary-text-item{:style=>"height:18px; line-height:18px"}
   
                          .inner-link{:style=>"width:300px;height:18px;overflow:hidden"}
                            %div{:style=>"padding:2px 0 3px 4px; height:18px; width:18px; float:left;"}
                              = "<img src='/images/logos/star_32_point_inv.png' height='14px' width='14px'/>"
                            = link_to item.title, item_path(item.doctype, item), :title => truncate(strip_tags(item.body), :length => 96)


                  .clear






