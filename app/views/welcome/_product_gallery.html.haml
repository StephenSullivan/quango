- if current_group.has_product_gallery
  .section-head-welcome{:style=>"border-bottom:10px solid gainsboro;"}
    .secondary-navigation-sections{:style=>"background-color:white"}
      .products{:style=>"font-family:Arial,sans-serif; font-weight:bold; font-size:14px;padding-left:10px;color:#{current_group.primary_dark}; letter-spacing:-1px;"}
        = "Products...."  
        .navcontrols{:style => "width:96px; height:32px; float:right"}
          %a.show_products{:class => "products navlinks showhide left", :style=>"color:#{current_group.primary_dark}"}
            = "show products"
          %a.hide_products{:class => "products navlinks showhide left", :style=>"color:#{current_group.primary_dark}"}
            = "hide products"

   
        
    .section-listing-welcome{:class => "products", :style => ""}

      %h4{:style=>"height:24px;line-height:26px;text-transform:uppercase;font-family:'Arial Narrow',sans-serif;color: white; background-color:#{current_group.tertiary}; border-bottom:4px solid #{current_group.primary};margin:0; font-size:16px; letter-spacing:-1px;font-weight:bold;"}
        %div{:style=>"padding:2px 0 2px 4px; height:18px; width:18px; float:left;"}
          = "<img src='/images/logos/star_16.png' height='16px' width='16px'/>"
        = "Product Kaleidoscope"

      - slideshow_delay = 0
      -current_group.doctypes.reverse.each do |doctype|
        -if doctype.product_format
          -slideshow_delay = slideshow_delay + 1200
          -#  = slideshow_delay.to_s
          %div{:style=>"width:728px;float:right;border-left:1px solid white", :class=>"feature-box"}
            -#= "#{slideshow_delay}"

            .product-gallery{:style=>"width:728px",:class=>"auto jCarouselLite"}
              - items_array = Array.new
              - doctype.items.reverse.each do |item|
                - items_array << item 
              %ul{:class=>"#{doctype.name}",:style=>"width:728px"}    
                - items_array[0..9].each do |item|
                  = render :partial => "/items/product_gallery", :locals => {:item => item, :sort=>"hot"}

          %script{:type => "text/javascript"}
            = "$('.product-gallery').jCarouselLite({"
            = "auto: 800,"
            = "visible: 5,"
            = "easing: 'linear',"
            = "speed: 1600"
            = "});"





          %script{:type => "text/javascript"}
            = "$(document).ready(function() {"
            = "    $('.Xslideshow.#{doctype.name}').delay('#{slideshow_delay}').cycle({"
            = "		fx: 'fade' // choose your transition type, ex: fade, scrollUp, shuffle, etc..."

            = "	});"
            = "});"


    %script{:type => "text/javascript"}
      = "// collapse:"
      = "$('.hide_products.products').click(function() {"
      = "$('.hide_products.products').css('display','none');"
      = "$('.show_products.products').css('display','block');"
      = "$('.products.section-listing-welcome').hide('fast');"
      -#= "$.cookie('summary.index.summary', 'collapsed', { expires: 2 });"
      = "});"
      = "// expand:"
      = "$('.show_products.products').click(function() {"
      = "$('.show_products.products').css('display','none');"
      = "$('.hide_products.products').css('display','block');"
      = "$('.products.section-listing-welcome').show('slow');"
      -#= "$.cookie('summary.index.summary', 'expanded', { expires: 2 });"
      = "});"
      = "// ok so far"
      -#= "// COOKIES"
      -#= "var summary = $.cookie('summary.index.summary');"
      -#= "	// Set the user's selection for the left column"
      -#= "if (summary == 'collapsed') {"
      -#= "$('.hide_summary.summary').css('display','none');"
      -#= "$('.show_summary.summary').css('display','block');"
      -#= "$('.summary.section-listing-welcome').hide();"
      -#= "};"
      -#= "if (summary == 'expanded') {"
      -#= "$('.hide_summary.summary').css('display','block');"
      -#= "$('.show_summary.summary').css('display','none');"
      -#= "$('summary.summary.section-listing-welcome').show();"
      -#= "};"
      - if expanded == true
        -#= "if (summary == null) {"
        = "$('.show_products.products').css('display','block');"
        = "$('.hide_products.products').css('display','none');"
        = "$('.products.section-listing-welcome').show();"
        -#= "};"
      - else
        -#= "if (summary == null) {"
        = "$('.hide_products.products').css('display','block');"
        = "$('.show_products.products').css('display','none');"
        = "$('.products.section-listing-welcome').hide();"
        -#= "};"
      -#= "};"
