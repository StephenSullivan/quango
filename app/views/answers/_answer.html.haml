-item = answer.item
-title = h(item.title)
-owner = answer.user

%li.item
  / Item Stats
  .stats
    .box.votes
      .counter{:class => class_for_number(answer.votes_average) }
        =format_number(answer.votes_average)
      .text
        =t(:votes, :scope => "activerecord.attributes.item")
  / Item Summary
  .summary
    %h3
      = link_to title, item_path(item), :title => truncate(h(answer.body), :length => 200)
  .clear
