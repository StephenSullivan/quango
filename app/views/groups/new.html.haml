
- is_mobile = params[:mobile]


- if !is_mobile
  -content_for :main do
    %h2
      = t(".title")

    -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
      = f.error_messages
      = render :partial => "form", :object => f
      .group.navform
        = f.submit  t("scaffold.create"),:class=>"submit-button"
        = t("global.or")
        = link_to  t("scaffold.back"), groups_path, :class => "cancel button"


- if is_mobile || current_group.group_type == "mobile"


  -content_for :main do
    .container{:style=>"border-top:1px solid #{current_group.primary};padding-bottom:16px"}
      .heading{:style=>"height:32px;line-height:32px;padding:16px 0 16px;"}
        = "Choose a name for your MOFAQ"

      .dark{:style=>"width:450px;border-radius:8px;border-color:#{current_group.primary};-webkit-box-shadow:inset 0 0 1px white,0 0 1px #{current_group.primary};padding:16px;"}

        .form
          -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
            = f.error_messages
            = render :partial => "form", :object => f
            .group
              %button.submit-button{:style=>"margin:0;", :type=>"submit"}
                = "Create mobile FAQ"
        .note{:style=>"padding:16px 0 0 0"}
          = "Please choose a name for y<u>our</u> mobile FAQ (<a>Tips</a>)"

-yield :main
