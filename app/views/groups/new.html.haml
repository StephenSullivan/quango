
- is_mobile = params[:mobile]


- if !is_mobile
  -content_for :main do
    %h2
      = t(".title")

    -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
      = f.error_messages
      = render :partial => "form", :object => f
      .group.navform
        = f.submit  t("scaffold.create")
        = t("global.or")
        = link_to  t("scaffold.back"), groups_path, :class => "cancel button"


- if is_mobile


  -content_for :main do
    #fold  
      .something{:style=>"width:480px;margin:0 auto;"}
        -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
          = f.error_messages
          = render :partial => "form", :object => f
          .group.navform
            = f.submit  t("scaffold.create"), :class=>"submit-button"
            = t("global.or")
            = link_to  t("scaffold.back"), groups_path, :class => "cancel button"


-yield :main
