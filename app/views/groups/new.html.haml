
- is_mobile = params[:mobile]


- if !is_mobile
  -content_for :main do
    %h2
      = t(".title")

    -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
      = f.error_messages
      = render :partial => "form", :object => f
      .group.navform
        = f.submit  t("scaffold.create"),:class=>"submit-button"
        = t("global.or")
        = link_to  t("scaffold.back"), groups_path, :class => "cancel button"


- if is_mobile || current_group.group_type == "mobile"


  -content_for :main do
    .container{:style=>"margin-top:16px;margin-bottom:16px"}
      .light{:style=>"width:450px;border-radius:8px;border-color:#{current_group.primary};-webkit-box-shadow:inset 0 0 1px white,0 0 1px #{current_group.primary};padding:16px;"}
        .heading
          = "Choose a name"
        .form
          -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
            = f.error_messages
            = render :partial => "form", :object => f
            .group
              %button.submit-button{:style=>"margin:0 0 32px;", :type=>"submit"}
                = "Create mobile FAQ"
        .note{:style=>"text-align:center;padding:16px 0 0 0;font-weight:bold;text-shadow:-1px -1px 2px #000000"}
          = "Please choose a name for y<u>our</u> mobile FAQ (<a>Tips</a>)"

-yield :main
