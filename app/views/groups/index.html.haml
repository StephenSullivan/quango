-content_for :list do


  %ul
    -if logged_in? && current_user.admin?
      %li.active
        = link_to t(".actives"), groups_path(:tab=>"actives")
      %li.pending
        = link_to t(".pendings"), groups_path(:tab=>"pendings")
    %li.newest
      = link_to t(".newest", :default => :"items.index.newest"), groups_path(:tab=>"newest")
    %li.oldest
      = link_to t(".oldest", :default => :"items.index.oldest"), groups_path(:tab=>"oldest")
    %li.name
      = link_to t(".name", :default => :"items.index.name"), groups_path(:tab=>"name")
    %li.most_active
      = link_to t(".most_active"), groups_path(:tab=>"most_active")

-form_tag groups_path, :class => "form", :id => "filter_groups", :method => "get" do
  = label_tag :q, t(".filter"), :class => "label"
  = text_field_tag "q", params[:q], :class => "text_field filter_field"
  = submit_tag("filter")

%ul.items#groups
  = render :partial => "group", :collection => @groups

#additional_info
  =will_paginate @groups
  .clear

= link_to t(".request_group"), new_group_path, :class => "request_group"
.clear

/Layout
-content_for :main do
  #main.right
    #sidebar.left
      .sponsor{:style => "background-color:#{current_group.secondary}; background-image: url(/images/white_50_bg.png);"}
        = "sponsor"
      = yield :sidebar_left

    #sidebar.right
      .notice{:style => "background-color:#{current_group.secondary}"}
        = render :partial => "shared/layout/notice"
      = yield :sidebar_right
    .clear

  #main.left
    = yield :list
  .clear

