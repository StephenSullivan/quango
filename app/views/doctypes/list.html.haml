-content_for :main do

  #main-index

    %h1
      = "Listing items for"
      = @doctype.name
      = "...count ( #{@items.count} )"

    %p
      %table
        %tr
          %th
            = "name"

        - @items.each do |item|
          %tr
            %td
              = link_to "#{item_path(@doctype,item).to_s}", item_path(@doctype, item)





