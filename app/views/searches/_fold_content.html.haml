- expanded = local_assigns[:expanded]


.section-head-welcome{:style=>"margin-bottom:10px"}

  .section-listing-welcome{:class => "summary"}

    #welcome-content

      -current_group.doctypes[0..2].each do |doctype|
        -if !doctype.hidden?
          -if doctype.name == @active_section
            .div.left{:style=>"width:241px;background-color:#ffffff;border-right:1px solid white; display:block;"}
              - section_link = doctype.name.capitalize
              %h4{:style=>"height:24px;line-height:26px;text-transform:uppercase;font-family:'Arial Narrow',sans-serif;color: white; background-color:#{current_group.tertiary}; border-bottom:4px solid #{current_group.primary};margin:0; font-size:14px; letter-spacing:-1px;font-weight:bold;"}
                = link_to section_link, items_path(doctype), :style => "color: white; background-color:#{current_group.primary}"
                %div{:style=>"padding:2px 0 2px 4px; height:18px; width:18px; float:left;"}
                  = "<img src='/images/logos/star_16.png' height='16px' width='16px'/>"
          -else
            .div.left{:style=>"width:241px;background-color:#ffffff;border-right:1px solid white; display:block"}
              - section_link = doctype.name.capitalize
              .div.inner{:style=>"margin:0"}
                %h4{:style=>"height:32px;line-height:32px;text-transform:uppercase;font-family:'Arial Narrow',sans-serif;color: white; background-color:#{current_group.secondary}; border-bottom:4px solid #{current_group.primary};margin:0; font-size:15px; letter-spacing:-1px;font-weight:bold;border-bottom:1px solid white"}
                  %div{:style=>"padding:1px 0 3px 4px; height:18px; width:18px; float:left;"}
                    = "<img src='/images/logos/star_16.png' height='14px' width='14px'/>"
                  = link_to section_link, items_path(doctype), :style => "color: #{current_group.primary};", :object => doctype, :style => "color:white"

                .content

                  %ul.features
                    -if doctype.items.empty?
                      %li.highlight
                        = t(".empty")
                    -else

                      - items_array = Array.new
                      - @items.reverse.each do |item|
                        - if item.doctype_id == doctype.id
                          - items_array << item
                      - items_array[0..0].each do |item|
                        .summary-list-text
                          = render :partial => "/items/summary_list_feature", :locals => {:item => item, :sort=>"hot"}

                    -#.more
                      -#%h4{:style => "color: #{current_group.primary};font-weight:bold; border-bottom:2px solid #{current_group.primary};height:16px; line-height:16px; margin-bottom:1px"}
                        -#= "More " + section_link.downcase
                      -#.summary-list-text
                      -#- items_array[1..5].each do |item|
                        -#- if item
                          -#= render :partial => "/items/summary_list_text", :locals => {:item => item, :sort=>"hot"}


      .clear
    .clear






