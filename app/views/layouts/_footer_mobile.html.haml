
.clear
.footer-mobile{:style=>"width:480px;padding:8px 0;margin:16px auto;font-size:0.7em;border-top:1px solid #{current_group.primary};border-radius:0 0 8px 8px"}
  .footer
    .left{:style=>"margin:0;width:240px"}
      = link_to "moFAQ", "http://moFAQ.com", :title => "Every business needs a mobile FAQ", :style=>"font-weight:bold;letter-spacing:-1px;"
      = " v" + AppConfig.version.to_s
      - if @render_start
        - rendering_stop = Time.now
        - rendering_time = rendering_stop - @render_start
        = "#{rendering_time}"
      = "<a style='border-radius:2px;background-color: #{current_group.secondary};color:white;padding:0 4px;letter-spacing:-1px;font-size:10px;font-weight:normal;'>BETA</a>"
      = "|"
      =  link_to "credits","/about/credits"
      %br
      = "view: <a href=\'/\'>classic</a> | mobile"
    .right{:style=>"width:240px;height32px",:class=>"create-button"}
      %button.create-button
        
        = link_to "Create your mobile FAQ", "#{new_group_path}/?mobile=true"
      %br
        .resellers{:style=>"text-align:center"}
          = "Resellers <a>click here</a>"
    .clear



















