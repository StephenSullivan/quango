-feed_url = url_for(:format => "atom", :tags => params[:tags])

-content_for :trends do
  = render :partial => "items/item_topics", :object => @tag_cloud

-content_for :rss do
  %link{:rel=>"alternate", :type=>"application/atom+xml", :title => "atom", :href=> url_for(:format => "atom", :tags => params[:tags])}
  %link{:rel=>"alternate", :type=>"application/atom+xml", :title => "atom", :href=> url_for(:format => "atom")}

-content_for :subtabs do
  .secondary-navigation{:class => @active_subtab.to_s}
    .navlabel
      = t("layouts.application.news")
      -if current_user.owner_of?(current_group)
        -if @items
          == (#{@items.total_entries})
    .navcontrols
      .subtabs
        %ul
          %li.newest
            = link_to t("items.index.newest"), newsfeeds_path(:sort=>"newest"), :title => t("items.index.newest_tooltip"),:class=>"button"
          %li.hot
            = link_to t("items.index.hot"), newsfeeds_path(:sort=>"hot"), :title => t("items.index.hot_tooltip"),:class=>"button", :rel => "nofollow"
          %li.votes
            = link_to t("items.index.votes"), newsfeeds_path(:sort=>"votes"), :title =>  t("items.index.votes_tooltip"),:class=>"button", :rel => "nofollow"
          %li.activity
            = link_to t("items.index.active"), newsfeeds_path(:sort=>"activity"), :title => t("items.index.active_tooltip"),:class=>"button", :rel => "nofollow"



-content_for :sidebar do
  -if logged_in?
    = render :partial => "shared/language_filter"

  = render :partial => "shared/current_tags"
  .block
    %h3
      = t('.tags', :default => [:"layout.application.tags", :"activerecord.attributes.user.tags", "tags"])
    .content
      = render :partial => "shared/tag_list", :object => @tag_cloud


= render :partial => "searches/search_box"

/Items
-content_for :main do
  = yield :subtabs
  .clear

  %ul.items#items
    -if @items.empty?
      %li.highlight
        = t(".empty")
    -@items.each do |item|
      -if item.mode == "news"
        = render :partial => "item", :object => item

  #additional_info
    =will_paginate @items

    #help_us
      = t(".help_to_answer")
      =link_to t(".unanswered_items"), unanswered_items_path

    .clear
