= javascript_include_merged :login
= stylesheet_link_tag '/javascripts/openid/css/style.css', :media => 'screen, projection'
-session["return_to"] = request.referrer unless request.referrer.blank?

-if current_group.registered_only
  %h1
    IMPORTANT: You must be logged in to see this site


- @active_section = "Login"

-content_for :open_login do
  .login-form-holder
    .open-login-form
      %span{:style => "font-color: white; font-size: 18px;"}
        = "Other login options:"
      .note
        = "Don't want to remember another login?<br/>Easy! Just use one of your existing ones:"

      = render :partial => "sessions/openid"

-content_for :login do
  -unless current_group.openid_only
    .login-form-holder
      .login-form
        -form_for :user, resource, :url => session_path(resource_name), :html => {:class => ""} do |f|
          %table.login
            %tr
              %td{:colspan => "2"}
                %span{:style => "font-color: white; font-size: 18px;"}
                  = "Login to your account"

            %tr
              %td
                .input-holder
                  = f.label :email, t("email", :scope => "activerecord.attributes.user"), :class => "label left"
              %td
                .input-holder
                  = f.text_field :email, :class => "text-field right", :style => "width:256px"
            %tr
              %td{:valign => "top"}
                .input-holder
                  = f.label :password, t("password", :scope => "activerecord.attributes.user"), :class => "label left"
              %td
                .input-holder-password
                  = f.password_field :password, :class => "password text-field right", :style => "width:256px"
                -if devise_mapping.rememberable?
                  .remember{:style => "background-color:#{current_group.primary}"}
                    =f.label :remember_me, t(".remember_me")
                    =f.check_box :remember_me

            %tr
              %td
              %td
                = f.submit "Login and share your thoughts...", :class => "action-button", :style => "width:256px"
                = "or"
                = link_to "Sign up now!", new_user_path, :style => "border: 1px solid white"


      = render :partial => "shared/devise_links"






/Layout
-content_for :main do
  .right
    = yield :open_login
  .left
    = yield :login
.clear




