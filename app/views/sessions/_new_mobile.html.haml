
-content_for :main do



  .container
    %h2
      = "Login to your account..."

    -form_for :user, resource, :url => session_path(resource_name), :html => {:class => "form"} do |f|
      .form
        .group
          = "Email"
          = f.text_field :email, :class => "text_field_mobile"
        .clear

        .group
          = "Password"
          = f.password_field :password, :class => "text_field_mobile"
        .clear

        -if devise_mapping.rememberable?
          .group
            .remember{:style=>"height:24px;line-height:24px;width:312px;float:right;color:white"}
              =f.check_box :remember_me, :style=>"font-size:14px;padding:2px"
              =f.label :remember_me, "Remember me?"


        .form-footer

          .submit_button
            = submit_tag "Login now..!",:class=>"submit-button"

        .devise{:style => "margin-left:32px; width:312px; float:right"}
          = render :partial => "shared/devise_links"

        .clear




        %h4{:style=>"margin-top:8px;margin-bottom:8px;background:0;border:0"}
          = "Alternatively..."
        .center{:style=>"width:388px; float:left;"}
          %a.standard-button{:style=>"margin-bottom:16px;width:194px;height:32px;font-size:14px;margin:0 auto;", :href=>"/members/new"}
            .inner{:style=>"width:186px; height:16px;padding:8px;"}
              = "BECOME A MEMBER"
        .note{:style=>"margin-top:8px;width:200px;color:white; font-size:12px; line-height:12px;float:left "}
          = "Members can add answers and/or comments. Membership is free."
        .clear









